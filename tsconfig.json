{
  "compilerOptions": {
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es6", "dom"],
    "rootDir": ".",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "target": "es5",
    "types": [
      "hammerjs",
      "lodash",
      "node"
    ]
  },
  "include": [
    "index.ts",
    "server.ts",
    "webpack-config.ts",
    "src/**/*"
  ],
  "exclude": [
    "node_modules/**/*",
    "dist/**/*"
  ]
}
